<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.greenacademy.ga_finalprojecthm.fragment.ContactFormFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ff000000"
        android:text="CONTACT FORM"
        android:textAllCaps="true"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingLeft="12dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:text="CONTACT FORM"
        android:textAllCaps="true"
        android:textColor="#ff000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:textColor="#ff000000"
        android:text="Your local Customer Service ream is always ready to help! Whatever your  question is, please don't hesitate to give us a call, or send an email. For an easy and quick way to find what you're looking for, please take a look at our FAQs\n\nPlease note that you can't apply for a job through this contact form"

        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="15dp"
        android:text="Choose a subject area:"
        android:textColor="#ff000000"/>
    <Spinner
        android:id="@+id/spinnerArea"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignEnd="@id/textView8"
        android:layout_alignRight="@id/textView8"
        android:layout_below="@+id/textView9"
        android:gravity="center_vertical"
        android:textColor="#ff000000"
        android:textStyle="bold"
        >

    </Spinner>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerArea"
        android:layout_alignStart="@+id/spinnerArea"
        android:layout_below="@+id/spinnerArea"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:text="Please add your question:" />

    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignEnd="@id/spinnerArea"
        android:layout_alignRight="@id/spinnerArea"
        android:layout_below="@+id/textView11"
        android:ems="10"
        android:textStyle="bold"
        android:background="@drawable/tvprivacypolicy"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etQuestion"
        android:layout_alignStart="@+id/etQuestion"
        android:layout_below="@+id/etQuestion"
        android:layout_marginTop="10dp"
        android:text="Please anter your name:"
        android:textColor="#ff000000"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignEnd="@id/etQuestion"
        android:layout_alignRight="@id/etQuestion"
        android:layout_below="@+id/textView15"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:background="@drawable/tvprivacypolicy"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName"
        android:layout_below="@+id/etName"
        android:layout_marginTop="10dp"
        android:text="Please enter your email:"
        android:textColor="#ff000000"/>

    <EditText
        android:id="@+id/etEmailContactForm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_below="@+id/textView16"
        android:layout_alignEnd="@id/etName"
        android:layout_alignRight="@id/etName"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/tvprivacypolicy"
        android:textColor="#ff000000"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/etEmailContactForm"
        android:layout_alignLeft="@id/etEmailContactForm"
        android:layout_alignStart="@id/etEmailContactForm"
        android:layout_alignEnd="@id/etEmailContactForm"
        android:layout_alignRight="@id/etEmailContactForm"
        android:layout_marginTop="40dp"
        android:background="@drawable/btnregister"
        android:text="SEND"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
</ScrollView>
