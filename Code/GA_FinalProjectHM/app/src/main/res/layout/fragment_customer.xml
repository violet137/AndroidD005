<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.greenacademy.ga_finalprojecthm.fragment.CustomerFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom_general"
        android:paddingBottom="@dimen/padding_bottom_general"
        android:paddingEnd="@dimen/padding_end_general"
        android:paddingLeft="@dimen/padding_start_general"
        android:paddingRight="@dimen/padding_end_general"
        android:paddingStart="@dimen/padding_start_general"
        android:paddingTop="@dimen/padding_top_general"
        android:background="#ff000000"
        android:gravity="center_vertical"
        android:text="@string/help"
        android:textAllCaps="true"
        android:textColor="#ffffffff"
        android:textSize="@dimen/font_size_general"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
