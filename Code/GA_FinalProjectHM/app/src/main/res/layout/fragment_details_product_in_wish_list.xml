<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.greenacademy.ga_finalprojecthm.fragment.DetailsProductInWishListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ff000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSanPhamAndMau"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_start_general"
            android:paddingStart="@dimen/margin_start_general"
            android:text="TextView"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingEnd="@dimen/margin_end_general"
            android:paddingRight="@dimen/margin_end_general"
            android:text="TextView"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="490dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpagerSanPham"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_start_share_chitiet_sapham"
            android:layout_marginStart="@dimen/margin_start_share_chitiet_sapham"
            android:layout_marginTop="@dimen/margin_top_share_chitiet_sapham"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_item_details_button_share_normal" />

            <ImageView
                android:id="@+id/imgChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_chitiet_sanpham"
                android:src="@drawable/shop_item_details_button_info_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_start_price"
            android:layout_marginStart="@dimen/margin_start_price"
            android:layout_marginTop="@dimen/margin_top_price"
            android:background="#ffffffff"
            android:gravity="center"
            android:text="$100"
            android:textColor="#ff000000"
            android:textSize="25sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSanPhamPhuHop"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_button_start_bacham"
                android:layout_marginStart="@dimen/margin_button_start_bacham"
                android:foreground="@drawable/shop_item_details_stylewith_icon_normal" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button


                android:id="@+id/btnColor"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_button_start_color"
                android:layout_marginStart="@dimen/margin_button_start_color" />
        </FrameLayout>

        <Button
            android:id="@+id/btnSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIZE"
            android:textColor="#ffffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnChoSanPhamVaoGioHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>

</LinearLayout>
